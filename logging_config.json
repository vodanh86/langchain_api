{
    "version": 1,
    "formatters": {
      "simple": {
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
      }
    },
    "handlers": {
      "console": {
        "class": "logging.StreamHandler",
        "level": "INFO",
        "formatter": "simple",
        "stream": "ext://sys.stdout"
      },
      "file": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "INFO",
        "formatter": "simple",
        "filename": "data/log/chat.log",
        "maxBytes": 10485760,
        "backupCount": 40,
        "encoding": "iso-8859-1"
      }
    },
    "loggers": {
      "Logger": {
        "level": "INFO",
        "handlers": [
          "console", "file"
        ],
        "propagate": "no"
      }
    }
  }